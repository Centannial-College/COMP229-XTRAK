<div class="container-fluid" style="background-color: #8938F7; height: 100%">
    <div class="position-absolute top-50 start-50 translate-middle bg-light p-5 w-75 min-width2">
        <h3 class="text-center">Log List</h3>
        <hr>
        <!-- Table with values from database -->
        <table class="table table-striped table-hover">
            <thead class="table-striped">
                <tr>
                    <th scope="col" class="text-center">ID</th>
                    <th scope="col" class="text-center">Date</th>
                    <th scope="col" class="text-center">user(Type)</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody id="contactList">
                 <% for(let count = 0; count < logs.length; count++) { %>
                     <tr>
                        <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td class="text-center"><%= logs[count].date %></td>
                            <td class="text-center"><%= logs[count].username %>(<%= logs[count].userType %>)</td>
                            <td class="text-center"><%= logs[count].action %></td>
                     </tr>
                 <% } %>
             </tbody>
        </table>
    </div>
</div>